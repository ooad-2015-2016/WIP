        <Rectangle Fill="Black" HorizontalAlignment="Left" Height="64" Margin="530,250,0,0" Stroke="Black" VerticalAlignment="Top" Width="64" Opacity="0.5"/>
        <Rectangle Fill="Black" HorizontalAlignment="Left" Height="64" Margin="630,250,0,0" Stroke="Black" VerticalAlignment="Top" Width="64" Opacity="0.5"/>
        <Rectangle Fill="Black" HorizontalAlignment="Left" Height="64" Margin="730,250,0,0" Stroke="Black" VerticalAlignment="Top" Width="64" Opacity="0.5"/>
        <Rectangle Fill="Black" HorizontalAlignment="Left" Height="64" Margin="830,250,0,0" Stroke="Black" VerticalAlignment="Top" Width="64" Opacity="0.5"/>
        <Rectangle Fill="Black" HorizontalAlignment="Left" Height="64" Margin="930,250,0,0" Stroke="Black" VerticalAlignment="Top" Width="64" Opacity="0.5"/>

        <Rectangle Fill="Black" HorizontalAlignment="Left" Height="64" Margin="530,350,0,0" Stroke="Black" VerticalAlignment="Top" Width="64" Opacity="0.5"/>
        <Rectangle Fill="Black" HorizontalAlignment="Left" Height="64" Margin="630,350,0,0" Stroke="Black" VerticalAlignment="Top" Width="64" Opacity="0.5"/>
        <Rectangle Fill="Black" HorizontalAlignment="Left" Height="64" Margin="730,350,0,0" Stroke="Black" VerticalAlignment="Top" Width="64" Opacity="0.5"/>
        <Rectangle Fill="Black" HorizontalAlignment="Left" Height="64" Margin="830,350,0,0" Stroke="Black" VerticalAlignment="Top" Width="64" Opacity="0.5"/>
        <Rectangle Fill="Black" HorizontalAlignment="Left" Height="64" Margin="930,350,0,0" Stroke="Black" VerticalAlignment="Top" Width="64" Opacity="0.5"/>

        <Rectangle Fill="Black" HorizontalAlignment="Left" Height="64" Margin="530,450,0,0" Stroke="Black" VerticalAlignment="Top" Width="64" Opacity="0.5"/>
        <Rectangle Fill="Black" HorizontalAlignment="Left" Height="64" Margin="630,450,0,0" Stroke="Black" VerticalAlignment="Top" Width="64" Opacity="0.5"/>
        <Rectangle Fill="Black" HorizontalAlignment="Left" Height="64" Margin="730,450,0,0" Stroke="Black" VerticalAlignment="Top" Width="64" Opacity="0.5"/>
        <Rectangle Fill="Black" HorizontalAlignment="Left" Height="64" Margin="830,450,0,0" Stroke="Black" VerticalAlignment="Top" Width="64" Opacity="0.5"/>
        <Rectangle Fill="Black" HorizontalAlignment="Left" Height="64" Margin="930,450,0,0" Stroke="Black" VerticalAlignment="Top" Width="64" Opacity="0.5"/>

        <Rectangle Fill="Black" HorizontalAlignment="Left" Height="64" Margin="530,550,0,0" Stroke="Black" VerticalAlignment="Top" Width="64" Opacity="0.5"/>
        <Rectangle Fill="Black" HorizontalAlignment="Left" Height="64" Margin="630,550,0,0" Stroke="Black" VerticalAlignment="Top" Width="64" Opacity="0.5"/>
        <Rectangle Fill="Black" HorizontalAlignment="Left" Height="64" Margin="730,550,0,0" Stroke="Black" VerticalAlignment="Top" Width="64" Opacity="0.5"/>
        <Rectangle Fill="Black" HorizontalAlignment="Left" Height="64" Margin="830,550,0,0" Stroke="Black" VerticalAlignment="Top" Width="64" Opacity="0.5"/>
        <Rectangle Fill="Black" HorizontalAlignment="Left" Height="64" Margin="930,550,0,0" Stroke="Black" VerticalAlignment="Top" Width="64" Opacity="0.5"/>

        <Image x:Name="Item1" HorizontalAlignment="Left" Height="64" Margin="530,150,0,0" VerticalAlignment="Top" Width="64" Source="/Assets/Items/Armor1.png"/>
        
        <Rectangle Fill="Silver" HorizontalAlignment="Left" Height="464" Margin="1030,150,0,0" Stroke="Black" VerticalAlignment="Top" Width="130" Opacity="0"/>
        <Image x:Name="InventorySideBox" HorizontalAlignment="Left" Height="464" VerticalAlignment="Top" Width="130" Margin="1030,150,0,0" Source="/Assets/InGameMeni/InventorySideBox.png"/>

    </Grid>
</Page>
